{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "types": ["node", "jasmine"],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "ng-mocks": ["index"]
    },
    "skipLibCheck": true
  },
  "include": ["index.ts", "jasmine.ts", "jest.ts"]
}
