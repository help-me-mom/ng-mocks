{
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "baseBranches": ["master"],
  "dependencyDashboard": false,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rangeStrategy": "pin",
  "rebaseWhen": "conflicted",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "forkProcessing": "disabled",
  "ignoreDeprecated": false,
  "configMigration": true,
  "semanticCommitScope": "{{#if (equals packageFileDir '')}}root{{else}}{{{packageFileDir}}}{{/if}}",
  "additionalBranchPrefix": "{{#if (equals packageFileDir '')}}root{{else}}{{{packageFileDir}}}{{/if}}/",
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "hostRules": [
    {
      "matchHost": "docker.io",
      "username": "satantime",
      "password": "dckr_pat_aLRNk3vH9pYc1EtJgrHdOntl4Fs"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": ["libs/ng-mocks/package.json"],
      "enabled": false
    },
    {
      "matchPackageNames": ["ng-mocks"],
      "enabled": false
    },

    {
      "matchPackagePatterns": [".*"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "satantime/puppeteer-node",
        "@types/node",
        "nodejs/node"
      ],
      "enabled": true
    },
    {
      "matchFileNames": ["e2e/**"],
      "enabled": false
    },

    {
      "matchFileNames": [
        ".circleci/config.yml"
      ],
      "semanticCommitScope": "root",
      "additionalBranchPrefix": "root/"
    },
    {
      "matchFileNames": [
        "e2e/a5es5/**",
        "e2e/a5es2015/**"
      ],
      "additionalBranchPrefix": "e2e/a5/"
    }
  ]
}
